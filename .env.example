# Configuración de base de datos
# Para desarrollo local (sin Docker):
# DATABASE_URL=postgresql+asyncpg://cinema_user:cinema_pass@localhost:5432/cinema_db
# Para desarrollo con Docker:
DATABASE_URL=postgresql+asyncpg://cinema_user:cinema_pass@db:5432/cinema_db

# Clave secreta para JWT (cambiar en producción)
SECRET_KEY=your-secret-key-here-change-this-in-production

# Configuración de aplicación
APP_ENV=development
DEBUG=true

# Configuración de PostgreSQL (si usas variables separadas)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cinema_db
DB_USER=cinema_user
DB_PASS=cinema_pass